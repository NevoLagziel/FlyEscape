<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_a700"
    tools:context=".LostActivity">


    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_margin="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/lost_IMG_goback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_24"
            />
    </LinearLayout>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lost_MTV_gameover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Game Over"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textSize="60sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lost_BTN_scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Board"
            android:layout_above="@+id/lost_BTN_tryagain"
            android:textAllCaps="true"
            android:textSize="35sp"
            app:cornerRadius="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/yellow_400"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lost_BTN_tryagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRY AGAIN"
            android:textAllCaps="true"
            android:textSize="35sp"
            android:layout_alignParentBottom="true"
            app:cornerRadius="12dp"
            android:layout_marginBottom="40dp"
            android:layout_alignStart="@+id/lost_BTN_scoreboard"
            android:layout_alignEnd="@+id/lost_BTN_scoreboard"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/green_a700"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lost_MTV_gameover"
            android:padding="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/blue_100"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lost_MTV_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Name"
                android:textSize="40sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:maxLines="1"
                android:minLines="1"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lost_MTV_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lost_MTV_name"
                android:layout_alignStart="@+id/lost_MTV_name"
                android:layout_alignEnd="@+id/lost_MTV_name"
                android:layout_marginTop="22dp"
                android:text="Score : 0"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:maxLines="1"
                android:minLines="1"
                />

        </RelativeLayout>

</RelativeLayout>

