<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/blue_100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/score_LBL_rank"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="PLAYER NAME"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_rank"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="10"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/yellow_400"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_LBL_name"
            android:layout_alignStart="@id/score_LBL_name"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="Score : 0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <LinearLayout
            android:id="@+id/score_LAY_cord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_LBL_score"
            android:layout_marginTop="8dp"
            >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_xcord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="X - 0"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_ycord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:minLines="1"
            android:text="Y - 0"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>